{
  "name": "comet",
  "version": "1.0.0",
  "description": "#### 保证：   - 每个UI组件都一个完整的模块，都有自己独立的目录结构，  - 每个组件都可以被独立引用  - 每个组件都要覆盖单元测试 jest enzyme",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "docz:dev": "docz dev",
    "dev": "npx --max_old_space_size=8096 father doc dev --host 0.0.0.0",
    "build": "father build",
    "build:doc": "father doc build",
    "deploy": "father doc deploy",
    "lint": "eslint --fix ./src/ --ext .js,.jsx,.tsx",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "babel-eslint": "^10.1.0",
    "docz": "^2.3.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-umi": "^1.6.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "father": "^2.30.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WaterMozilla/comet.git"
  },
  "keywords": [
    "component",
    "library",
    "react",
    "ui"
  ],
  "author": "Doubao",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WaterMozilla/comet/issues"
  },
  "homepage": "https://github.com/WaterMozilla/comet#readme",
  "browserslist": [
    "last 2 version",
    "Firefox ESR",
    "> 1%",
    "ie >= 9"
  ],
  "dependencies": {
    "babel-plugin-import": "^1.13.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
